    <div class="form-row mt-2">
        <div class="form-group col-md-12 font-weight-bold mb-1">Error Categories<span class="text-danger font-weight-bolder">*</span><span class="font-weight-normal">&nbsp;(select at least one)</span></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12 border bg-light py-3 pl-4">
            <div class="form-row">
                @{
                    List<QMS.ViewModels.ErrorTypeViewModel> errorTypes = ViewBag.ErrorTypes;
                    int count = 0;
                    foreach (var errorType in errorTypes)
                    {
                        if (count++ % 4 == 0)
                        {
                @:</div><div class="form-row">
                        }
                        var checkboxId = $"selectedErrorTypes_{errorType.Id}";
                        //System.Console.WriteLine("checkboxId: " + checkboxId);
                    @:<div class="form-group col-md-3 m-0">
                        @:<div class="custom-control custom-checkbox">
                            <input type="checkbox"
                                   class="custom-control-input"
                                   id="@checkboxId"
                                   name="selectedErrorTypes"
                                   value="@errorType.Id"
                                   @(Html.Raw(errorType.Selected ? "checked=\"checked\"" : "")) />
                            <label class="custom-control-label" for="@checkboxId">@errorType.Description</label>
                        @:</div>
                    @:</div>
                    }
                }
            </div>
        </div>
    </div>