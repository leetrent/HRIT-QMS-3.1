    <script src="~/lib/popper/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <style>
        img.bottom {
            vertical-align: text-bottom;
        }
    </style>
    @RenderSection("Scripts", required: false)
</body>
</html>