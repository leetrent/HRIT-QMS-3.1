@model QMS.ViewModels.ErrorViewModel;

@{
    ViewData["Title"] = "Error";
    string nullMsg = "ErrorViewModel.QmsException IS NULL";
}

<h2 class="text-primary">Error:</h2>
<h4 class="text-secondary">An error occurred while processing your request.</h4>
<h4 class="text-secondary">Please contact: <a class="btn btn-outline-primary font-weight-bold" asp-page="/Contact">Technical Support</a></h4>
@if (@Model.ShowErrorDetails)
{
    <a id="showDetailsAnchor" href="#" onclick="showErrorDetails();">Show Details
        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M16.59 8.59L12 13.17 7.41 8.59 6 10l6 6 6-6z"/><path d="M0 0h24v24H0z" fill="none"/>
        </svg>
    </a>
    <a id="hideDetailsAnchor" href="#" onclick="hideErrorDetails();" style="display:none;">Hide Details&nbsp;
        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M12 8l-6 6 1.41 1.41L12 10.83l4.59 4.58L18 14z"/><path d="M0 0h24v24H0z" fill="none"/>
        </svg>
    </a>
    <div id="errorDetails" style="display:none">
        @if (@Model.QmsException != null)
        {
            <hr>@Model.QmsException.Message
            <hr>@Model.QmsException.StackTrace
            <hr>@Model.QmsException
        }  
        else
        {
            <hr>@nullMsg
        }
    </div>

    @section Scripts {
        <script src="~/js/qms_errors.js"></script>  
    }
}